<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="1" author="architect">
        <createTable tableName="user_balance">
            <column name="user_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="balance" type="DOUBLE"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="architect">
        <createTable tableName="payment_transaction">
            <column name="order_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INT"/>
            <column name="amount" type="DOUBLE"/>
            <column name="status" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="architect">
        <addColumn tableName="payment_transaction">
            <column name="product_id" type="INT"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
