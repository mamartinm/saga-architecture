<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="1" author="architect">
        <createTable tableName="user_balance">
            <column name="user_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="balance" type="DOUBLE"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="architect">
        <createTable tableName="payment_transaction">
            <column name="order_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INT"/>
            <column name="amount" type="DOUBLE"/>
            <column name="status" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="architect">
        <addColumn tableName="payment_transaction">
            <column name="product_id" type="INT"/>
        </addColumn>
    </changeSet>

    <changeSet id="4" author="architect">
        <createTable tableName="payment_audit_log">
            <column name="audit_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="event_date" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="message" type="VARCHAR(500)"/>
            <column name="severity" type="INT"/>
        </createTable>
    </changeSet>

    <changeSet id="5" author="architect">
        <addForeignKeyConstraint baseTableName="payment_audit_log"
                                 baseColumnNames="order_id"
                                 constraintName="fk_audit_payment"
                                 referencedTableName="payment_transaction"
                                 referencedColumnNames="order_id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
